{% extends 'base.html.twig' %}

{% block title %}Liste des signaux potentiels déjà saisis dans la base{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="text-center mb-4">Liste des signaux potentiels</h1>
    <p class="text-muted">
        Liste des signaux déjà présents dans cette base de données pour la substance : 
        <strong class="text-secondary fs-3">{{ substance }}</strong>
    </p>
    <div class="card mb-4">
        <div class="card-body">
            <p class="text-muted mb-0">
                Si vous voulez ajouter un nouveau signal potentiel pour cette substance, mais avec un dosage ou une voie d'administration autre que ceux listés plus bas :
            </p>
            <div class="d-flex justify-content-center">
                <a href="{{ path('app_saisie_signal_new', { 'substance': substance }) }}" class="btn btn-primary mt-2">
                    Nouveau signal potentiel pour cette substance
                </a>
            </div>
        </div>
    </div>
    {% if lstSignauxSaisis %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Substance</th>
                        <th scope="col">Dosage</th>
                        <th scope="col">Voie d'administration</th>
                        <th scope="col">Score</th>
                        <th scope="col">Modifier ce signal</th>
                    </tr>
                </thead>
                <tbody>
                    {% for signal in lstSignauxSaisis %}
                        <tr>
                            <td>{{ signal.Substance }}</td>
                            <td>{{ signal.Dosage }}</td>
                            <td>{{ signal.VoieAdmin.Libelle }}</td>
                            {% if signal.Score >= 5 %}
                                <td class="text-danger">{{ signal.Score }}</td>
                            {% else %}
                                <td class="text-success">{{ signal.Score }}</td>
                            {% endif %}

                            <td><a href="{{ path('app_edit_signal', { 'idSigPot': signal.id }) }}" class="btn btn-primary">Modifier</a><td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>




    {% else %}
        <div class="alert alert-warning text-center">
            Aucun signal trouvé pour cette substance.
        </div>
    {% endif %}
</div>
{% endblock %}
